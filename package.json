{
  "name": "rsmax-plugins",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm -r --parallel --filter=./packages/* run build",
    "dev": "pnpm -r --parallel --filter=./packages/* run dev",
    "format": "prettier --write ./packages",
    "publish": "pnpm publish -r"
  },
  "author": "watsonhaw5566",
  "dependencies": {
    "nano-staged": "^0.8.0",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 18.0.0"
  },
  "nano-staged": {
    "*.{js,ts,md,json}": [
      "prettier --write ./packages"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@rslib/core": "^0.7.1",
    "vitest": "^3.1.3"
  }
}
